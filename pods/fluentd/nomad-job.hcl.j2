job "fluentd" {
  datacenters = ["dc1"]
  type = "system"
  update {
    max_parallel = 1
    healthy_deadline = "30s"
    auto_revert      = true
    stagger          = "10s"
  }
  group "fluentd" {
    restart {
      attempts = 3
      delay    = "60s"
      interval = "15m"
      mode     = "delay"
    }
    task "fluentd-{{ansible_env.POD_VERSION}}" {
      driver = "docker"
      config {
        image = "{{ansible_env.REGISTRY_ADDRESS}}/{{ansible_env.REPOSITORY_NAME}}/fluentd:{{ansible_env.POD_VERSION}}"
        auth {
          server_address = "{{ansible_env.REGISTRY_ADDRESS}}"
          username = "{{ansible_env.REGISTRY_USERNAME}}"
          password = "{{ansible_env.REGISTRY_PASSWORD}}"
        }
        port_map {
          service = 24224
        }
      }
      resources {
        memory = 60
        network {
          mbits = 100
          port "service" {
            static = 24224
          }
        }
      }
      service {
        name = "fluentd"
        port = "service"
        check {
          type = "tcp"
          interval = "4s"
          timeout  = "2s"
          check_restart {
            limit = 3
            grace = "10s"
            ignore_warnings = false
          }
        }
      }
    }
  }
}
