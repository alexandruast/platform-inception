job "fluentd" {
  datacenters = ["dc1"]
  type = "system"
  update {
    max_parallel = 1
    healthy_deadline = "30s"
    auto_revert      = true
    stagger          = "10s"
  }
  group "fluentd" {
    restart {
      attempts = 3
      delay    = "60s"
      interval = "15m"
      mode     = "delay"
    }
    task "fluentd-{{lookup('env','POD_TAG')}}" {
      driver = "docker"
      config {
        image = "{{lookup('env','REGISTRY_ADDRESS')}}/{{lookup('env','REGISTRY_PATH')}}/fluentd:{{lookup('env','POD_TAG')}}"
        auth {
          server_address = "{{lookup('env','REGISTRY_ADDRESS')}}"
          username = "{{lookup('env','REGISTRY_USERNAME')}}"
          password = "{{lookup('env','REGISTRY_PASSWORD')}}"
        }
        port_map {
          service = 24224
        }
      }
      resources {
        memory = 60
        network {
          mbits = 100
          port "service" {
            static = 24224
          }
        }
      }
      service {
        name = "fluentd"
        port = "service"
        check {
          type = "tcp"
          interval = "4s"
          timeout  = "2s"
          check_restart {
            limit = 3
            grace = "10s"
            ignore_warnings = false
          }
        }
      }
    }
  }
}
