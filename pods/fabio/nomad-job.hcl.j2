job "fabio" {
  datacenters = ["dc1"]
  type = "system"
  update {
    max_parallel = 1
    healthy_deadline = "30s"
    auto_revert      = true
    stagger          = "10s"
  }
  group "fabio" {
    restart {
      attempts = 3
      delay    = "60s"
      interval = "15m"
      mode     = "delay"
    }
    task "fabio-{{ansible_env.POD_VERSION}}" {
      driver = "docker"
      config {
        image = "{{ansible_env.REGISTRY_ADDRESS}}/{{ansible_env.REPOSITORY_NAME}}/fabio:{{ansible_env.POD_VERSION}}"
        auth {
          server_address = "{{ansible_env.REGISTRY_ADDRESS}}"
          username = "{{ansible_env.REGISTRY_USERNAME}}"
          password = "{{ansible_env.REGISTRY_PASSWORD}}"
        }
        port_map {
          ui   = 9998
          http = 9999
        }
      }
      env {
        FABIO_registry.consul.addr     = "${attr.unique.network.ip-address}:8500"
        FABIO_registry.consul.register = "False"
      }
      resources {
        memory = 30
        network {
          mbits = 100
          port "ui" {}
          port "http" {
            static = 9999
          }
        }
      }
      service {
        port = "ui"
        check {
          type = "http"
          path = "/health"
          interval = "4s"
          timeout  = "2s"
          check_restart {
            limit = 3
            grace = "10s"
            ignore_warnings = false
          }
        }
      }
    }
  }
}
