job "fabio" {
  datacenters = ["dc1"]
  type = "service"
  constraint {
    operator  = "distinct_hosts"
    value     = "true"
  }
  update {
    max_parallel = 1
    health_check     = "checks"
    healthy_deadline = "30s"
    auto_revert      = true
    stagger          = "10s"
  }
  group "fabio" {
    restart {
      attempts = 3
      delay    = "60s"
      interval = "15m"
      mode     = "delay"
    }
    task "fabio-{{lookup('env','POD_TAG')}}" {
      driver = "docker"
      config {
        image = "{{lookup('env','REGISTRY_ADDRESS')}}/{{lookup('env','REGISTRY_PATH')}}/fabio:{{lookup('env','POD_TAG')}}"
        auth {
          server_address = "{{lookup('env','REGISTRY_ADDRESS')}}"
          username = "{{lookup('env','REGISTRY_USERNAME')}}"
          password = "{{lookup('env','REGISTRY_PASSWORD')}}"
        }
        port_map {
          ui   = 9998
          http = 9999
        }
        dns_servers = [
          "${attr.unique.network.ip-address}"
        ]
        logging {
          type = "fluentd"
          config {
            fluentd-address = "fluentd.service.consul:24224"
            tag = "docker.{{lookup('env','POD_NAME')}}.fabio-{{lookup('env','POD_TAG')}}.${attr.unique.hostname}.{%raw%}{{.ID}}{%endraw%}"
          }
        }
      }
      env {
        FABIO_registry.consul.addr = "consul.service.consul"
        FABIO_registry.consul.register.enabled = "False"
        FABIO_proxy.noroutestatus = "503"
      }
      resources {
        memory = 128
        network {
          mbits = 100
          port "ui" {
            static = 9998
          }
          port "http" {
            static = 9999
          }
        }
      }
      service {
        name = "fabio"
        port = "ui"
        check {
          type = "http"
          path = "/health"
          interval = "4s"
          timeout  = "2s"
          check_restart {
            limit = 3
            grace = "10s"
            ignore_warnings = false
          }
        }
      }
    }
  }
}
