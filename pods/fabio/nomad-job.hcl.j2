job "{{ansible_env.POD_NAME}}-{{ansible_env.POD_VERSION}}" {
  datacenters = ["dc1"]
  type = "system"
  update {
    max_parallel = 1
    healthy_deadline = "10s"
    auto_revert      = true
    stagger          = "10s"
  }
  group "fabio" {
    task "fabio-{{ansible_env.POD_VERSION}}" {
      driver = "docker"
      config {
        image = "{{ansible_env.REGISTRY_ADDRESS}}/{{ansible_env.REPOSITORY_NAME}}/fabio:{{ansible_env.POD_VERSION}}"
        auth {
          server_address = "{{ansible_env.REGISTRY_ADDRESS}}"
          username = "{{ansible_env.REGISTRY_USERNAME}}"
          password = "{{ansible_env.REGISTRY_PASSWORD}}"
        }
      }
      service {
        port = "http"
        check {
          type = "http"
          path = "/health"
          interval = "10s"
          timeout  = "2s"
          check_restart {
            limit = 3
            grace = "30s"
            ignore_warnings = false
          }
        }
      }
      resources {
        memory = 30
        network {
          mbits = 100
          port "ui" {
            static = 9998
          }
          port "http" {
            static = 9999
          }
        }
      }
    }
  }
}
